{
  "name": "tdev-agency/checkbox-ua",
  "description": "Checkbox.ua SDK",
  "version": "1.0.0",
  "type": "library",
  "require": {
    "php": "^7.4|^8",
    "guzzlehttp/guzzle": "^7",
    "ext-json": "*",
    "illuminate/collections": "^7|^8"
  },
  "require-dev": {
    "phpunit/phpunit": "*",
    "fakerphp/faker": "^1.19",
    "squizlabs/php_codesniffer": "^3.6"
  },
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "TDevAgency\\CheckboxUa\\": "src/",
      "TDevAgency\\CheckboxUa\\Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "TDev Agency",
      "email": "contact@tdev.agency"
    }
  ],
  "minimum-stability": "stable",
  "scripts": {
    "phpunit": [
      "vendor/phpunit/phpunit/phpunit"
    ],
    "phpcs": [
      "./vendor/bin/phpcs --extensions=php --standard=PSR2 ./src/"
    ],
    "phpcbf": [
      "vendor/bin/phpcbf --extensions=php --standard=PSR2 ./src/"
    ]
  }
}
